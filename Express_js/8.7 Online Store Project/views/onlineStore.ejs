<%- include('partials/header.ejs') %>
<div class="content-container">
    <div>
        <img src="assets/banner.png" alt="banner" class="banner-img">
    </div>
    
    <div class="content">
        <h2>
            On Sale
        </h2>
        <div class="items-list">
            <ul>
               <% for( let index = 0; index < data.length; index++ ) { %>
                <li >
                    <img src="assets/product2.png" alt="" class="product-img">
                    <p class="title"><%= data[index].title %> </p>
                    <p class="discription"><%= data[index].description %> </p>
                    <p class="amt"><%= data[index].amount %></p>
                    <button class="btn">
                        ADD TO CART
                    </button>
                </li>
               <% } %>
                
               
              </ul>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>
</div>
